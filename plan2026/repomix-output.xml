      'lab',         // 3. Sales Enablement (Tools/Ice Breaking)
      'philosophy',  // 3. Sales Enablement (Philosophy)
      'timeline',    // 4. Market Impact (Timeline)
      ...(isVendorMode ? ['videos'] : []),
