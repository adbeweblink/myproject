    { id: 302, date: "2026-07-15", name: "快充學堂(DC)", type: EVENT_TYPES.ONLINE_DC, status: "Webinar", highlight: false },
    { id: 303, date: "2026-07-29", name: "快充學堂(CC)", type: EVENT_TYPES.ONLINE_CC, status: "Webinar", highlight: false },
